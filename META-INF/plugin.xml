<idea-plugin version="2">
  <id>agaricus.applysrg</id>
  <name>ApplySrg2Source</name>
  <version>2.0</version>
  <vendor email="agaricusb@yahoo.com" url="https://github.com/agaricusb/ApplySrg2Source">ApplySrg2Source</vendor>

  <description><![CDATA[
  Apply .srg class/field/method mappings to the source code of a project.
      ]]></description>

  <change-notes><![CDATA[
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
      <component>
          <implementation-class>agaricus.applysrg.BatchModeInitialization</implementation-class>
      </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <group id="applysrg.SampleMenu" text="_Srg" description="Srg menu">
          <add-to-group group-id="MainMenu" anchor="last"  />
          <action id="applysrg.applysrg" class="agaricus.applysrg.ApplySrgAction" text="Apply .srg with IntelliJ rename refactoring..." description="Apply .srg transformation" />
          <action id="applysrg.extractall" class="agaricus.applysrg.ExtractAllSymbolRangeMapAction" text="Extract symbol range map for all files" description="Extract symbol range map all" />
          <action id="applysrg.extractsel" class="agaricus.applysrg.ExtractSelectedSymbolRangeMapAction" text="Extract symbol range map for selected files" description="Extract symbol range map selected" />
      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>
